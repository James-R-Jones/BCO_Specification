{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://biocomputeobject.org/schemas/description_domain.json",
  "type": "object",
  "description": "TODO",
  "required": [
    "keywords",
    "pipeline_steps"
  ],
  "definitions": {
    "resource": {
      "description": "TODO",
      "required": [
        "address",
        "access_time"
      ],
      "properties": {
        "address": {
          "type": "string",
          "examples": [
            "https://hive.biochemistry.gwu.edu/dna.cgi?cmd=objFile&ids=514683"
          ],
          "format": "uri"
        },
        "access_time": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "properties": {
    "keywords": {
      "type": "array",
      "description": "Keywords to aid in search-ability and description of the object.",
      "items": {
        "type": "string",
        "description": "TODO",
        "examples": [
          "HCV1a",
          "Ledipasvir",
          "antiviral resistance",
          "SNP",
          "amino acid substitutions"
        ]
      }
    },
    "xref": {
      "type": "array",
      "description": "TODO",
      "items": {
        "type": "object",
        "description": "TODO",
        "required": [
          "namespace",
          "name",
          "ids",
          "access_time"
        ],
        "properties": {
          "namespace": {
            "type": "string",
            "description": "TODO",
            "examples": [
              "pubchem.compound"
            ]
          },
          "name": {
            "type": "string",
            "description": "TODO",
            "default": "",
            "examples": [
              "PubChem-compound"
            ]
          },
          "ids": {
            "type": "array",
            "description": "TODO",
            "items": {
              "type": "string",
              "description": "TODO",
              "examples": [
                "67505836"
              ]
            }
          },
          "access_time": {
            "type": "string",
            "description": "TODO",
            "format": "date-time"
          }
        }
      }
    },
    "pipeline_steps": {
      "type": "object",
      "description": "TODO",
      "required": [
        "tool"
      ],
      "properties": {
        "tool": {
          "type": "array",
          "description": "TODO",
          "items": {
            "type": "object",
            "description": "TODO",
            "required": [
              "step_number",
              "name",
              "description",
              "version",
              "input_list",
              "output_list"
            ],
            "properties": {
              "step_number": {
                "type": "integer",
                "description": "TODO"
              },
              "name": {
                "type": "string",
                "description": "this is a recognized name of the software tool",
                "examples": [
                  "HIVE-hexagon"
                ]
              },
              "description": {
                "type": "string",
                "description": "TODO",
                "examples": [
                  "Alignment of reads to a set of references"
                ]
              },
              "version": {
                "type": "string",
                "description": "TODO",
                "examples": [
                  "1.3"
                ]
              },
              "prerequisite": {
                "type": "array",
                "description": "reference or required prereqs",
                "items": {
                  "type": "object",
                  "description": "TODO",
                  "required": [
                    "name",
                    "uri"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Public searchable name for reference or prereq",
                      "default": "",
                      "examples": [
                        "Hepatitis C virus genotype 1"
                      ]
                    },
                    "uri": {
                      "description": "FIXME: base_type_BioCompute.json defines this as a string uri, but the specs define it as an object",
                      "$ref": "#/definitions/resource"
                    }
                  }
                }
              },
              "input_list": {
                "type": "array",
                "description": "TODO",
                "items": {
                  "$ref": "#/definitions/resource"
                }
              },
              "output_list": {
                "type": "array",
                "description": "TODO",
                "items": {
                  "$ref": "#/definitions/resource"
                }
              }
            }
          }
        }
      }
    }
  }
}
